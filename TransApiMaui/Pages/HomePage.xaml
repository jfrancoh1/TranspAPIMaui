<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransApiMaui.Pages.HomePage"
             Title="HomePage">
    <VerticalStackLayout Spacing="20">
        <Label 
            Text="Welcome to TranspAPI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="UserNameLabel" />
        <Label x:Name="UserLastNameLabel" />
        <Label x:Name="UserPhoneNumberLabel" />
        <Label x:Name="UserDocumentLabel" />

        <Button x:Name="btnUsers" Text="Users" Clicked="Users_Clicked"></Button>
        
        <Button x:Name="btnBranches" Text="Branches" Clicked="Branches_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>